.header-box
	if canCreateGroups
		.input-group.input-group-lg
			input#filter.form-control(type='text' placeholder='Filter by name' aria-label='Filter by name')
			span.input-group-btn
				button.btn.btn-success(data-action='create-group')
					span.glyphicon.glyphicon-plus
					span.text Create new group
	else
		.form-group
			input#filter.form-control.input-lg(type='text' placeholder='Filter by name' aria-label='Filter by name')
