.full-size > .center > .repository-datasets
	padding 0

.repository-datasets
	
	.header-box
		font-weight bold

		&.only-box
			padding 10px 25px

		.breadcrumb
			padding 0

		.repository-description
			font-weight normal

			.toggleable, .toggle-control
				font-size 14px

		#commit
			max-width 333px

		a.toggle-control 	

			&:hover, &:visited, &:active, &:focus
		
				&:not(.btn)
					color rgb(51, 122, 183)
					
	.table-browse

		& > thead > tr > th, & > tbody > tr > td
			padding 10px 20px
			
			@media(max-width 480px)
				padding 10px 5px
			
			&:first-child
				width 36px
				padding 10px 0 10px 20px

				@media(max-width 480px)
					padding 10px 0 10px 5px

			&:nth-child(2)
				width 45%

				@media(max-width 639px)
					width 100%
								
				@media(min-width 900px) and (max-width 1349px)
					width 50%

				@media(min-width 1350px)
					width 60%

			&:nth-child(3)
				width 160px

			&:nth-child(3), &:nth-child(4)
				
				@media(max-width 639px)
					display none
			
		& > tbody > tr:nth-child(odd) > td
			background-color rgb(248, 250, 252)
			border-bottom 1px solid rgb(231, 233, 237)

		.paging
			padding 0

.public-mode
	
	.repository-datasets 
	
		.table-browse 
		
			& > thead > tr > th, & > tbody > tr > td 
				
				&:nth-child(2)
					width 100%
			