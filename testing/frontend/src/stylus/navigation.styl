nav:not(.not-cs)
	position fixed
	background-color rgb(43, 51, 61)
	height 100%
	width 65px
	margin-top 65px
	color rgb(197, 208, 222)
	font-size 15px

	&.public-mode
		display none
		
	@media(min-width 992px)
		width 230px
		
	.menu-left
		margin-top 10px
		
	ul

		li 
			width 100%
			line-height 40px

			&.back

				@media(min-width 992px)
					padding-left 16px

			&.separate
				border-bottom 1px solid rgb(51, 60, 70)
				margin 10px 0
	
			&.active
				background-color rgb(36, 39, 45)
			
			&:not(.active):hover
				background-color rgb(51, 60, 71)
				transition background-color .5s ease
		
			a
				display block
				width 100%
				height 100%
				padding 0 24px
				
			a, a:hover, a:visited, a:active, a:focus
				text-decoration none
				
			.nav-icon
				width 16px
				height 16px
				
				&.mobile-only
	
					@media(min-width 992px)
						display none
				
			.nav-label
				padding-left 10px

				@media(max-width 991px)
					display none
						
	.profile-link
		background-color rgb(43, 51, 61)
		padding 10px 20px
		position fixed
		bottom 0
		overflow hidden

		@media(min-width 992px)
			width 230px

		@media(max-width 991px)
			padding 8px

		a
			display inline-block

			@media(min-width 992px)
				width 210px

			img 
				float left

			.username
				float left
				padding-left 10px
				line-height 48px
				max-height 48px
				overflow hidden
				max-width 158px
				word-wrap normal

				@media(max-width 991px)
					display none

body.public-mode nav
	width 65px