.full-size > .center > .repository-dataset
	padding 0

.repository-dataset

	[data-action='comment']
		margin-left 5px
		cursor pointer
	
	.header-box

		#commitId
			max-width 333px
			
		.user-info
			display block
			margin-top 10px
	
	@media(min-width 768px)
		.content-box
			display flex

	.category
		color rgb(127, 143, 164)

	a, a:hover, a:visited, a:active, a:focus
		
		&:not(.btn)
			color rgb(51, 122, 183)

	.header-box .form-inline
		float left

	.model-left-content
		border-bottom 1px solid rgb(221, 221, 221)

		@media(min-width 768px)
			width 75%
			border-right 1px solid rgb(221, 221, 221)
			border-bottom 0

		.nav-tabs
			padding 0 25px

			& > li

				@media(max-width 479px)
					float none
			
				&.maximize-content
					float right

					a
						cursor pointer
						color initial
					
						&:hover, &:focus
							border-color transparent
							background-color transparent

						&:hover
							font-size 15px
							padding-bottom 9px
							padding-left 14px
						
		.tab-pane.modal-content
			position fixed
			top 0
			left 0
			margin 2% 5% 1% 5%
			padding 25px
			z-index 10000
			width 90%
			height 90%
			overflow auto
    			
		.title 
			
			h3:first-child
				margin-bottom 0
			
			h3:last-child
				margin-top 0
				margin-bottom 20px

			.model-icon
				margin-top 20px
		
			.info-header
				padding-top 1px
		
		.breadcrumb
			padding 0 1px 8px 1px


		.title, .content
			padding 0 25px
			margin-top 0
							
			&:last-child
				padding-bottom 25px		

		.table > tbody > tr

			@media(min-width 1200px)

				& > td:first-child
					width 1%
					white-space nowrap
					padding-right 25px

			&.reference > td 
				font-weight bold

		.table.no-head > tbody > tr:first-child > td
			border 0

		#impact-category-group
			margin-bottom 5px
			
		#impact-category-description
			margin-top 0
			color rgb(119, 119, 119)

		.table.inputs, .table.outputs
			margin-bottom 0
	
		.table.inputs, .table.outputs, .table.flow-results

			& > tbody > tr > td, & > thead > tr > th

				&:first-child
					width 35px
					min-width initial

		.table.inputs, .table.outputs
		
			& > tbody > tr > td, & > thead > tr > th

				&:nth-child(3), &:nth-child(8), &:nth-child(10), &:nth-child(11)

					@media(max-width 479px)
						display none

				&:nth-child(4)
					text-align right
					white-space nowrap

				&:nth-child(5), &:nth-child(6), &:nth-child(7)

					@media(max-width 991px)
						display none

		@media(max-width 767px)
			
			.switch-to-list, .exchange-tables, .impact-factor-table
				display none	

		@media(min-width 768px)
				
			.switch-to-table, .exchange-list, .impact-factor-list
				display none

		.exchange-list-part, .impact-factor-list-part
						
			table, .toggle-control
				margin-left 20px

			table > tbody > tr 
				
				& > td:not(:last-child)
					padding-right 5px
				
				& > td > .same-size-font
					white-space nowrap

		.table.non-causal-allocation-factors > tbody > tr > td, .table.non-causal-allocation-factors > thead > tr > th
			
			&:first-child
				width 66%

		.table.causal-allocation-factors > tbody > tr > td, .table.causal-allocation-factors > thead > tr > th
			
			&:first-child
				width 35px
		
		.table.social-aspects 
			
			& > tbody > tr > td, & > thead > tr > th

				&:first-child
					width auto
					
				@media(max-width 767px)

					&:nth-child(5), &:nth-child(6), &:nth-child(7)
						display none
	
		.table-parameters > tbody > tr > td:nth-child(3), .table-parameters > thead > tr > th:nth-child(3)

			@media(max-width 479px)
				display none

		.table.units > thead > tr > th, .table.units > tbody > tr > td
				
			&:nth-child(2), &:nth-child(3)
				max-width 30%

				@media(max-width 767px)
					display none

		.table.impact-categories > thead > tr > th, .table.impact-categories > tbody > tr > td

			&:first-child
				width 75%

			&:nth-child(2)
				width 20%

			&:last-child
				width 5%

		.table.epd-modules > thead > tr > th, .table.epd-modules > tbody > tr > td

			&:nth-child(2)
				width 1%

		img.icon-small
			width 16px
			height 16px

		.map
			height 400px
			width 100%

	.model-right-content
		padding 25px

		@media(min-width 768px)
			width 25%

		.meta-info
			width 100%
			
			& > *:not(:first-child) strong, & > strong:not(:first-child) 
				margin-top 10px

			strong
				display block
				color rgb(80, 80, 80)

body.public-mode

	.repository-dataset
		height 100%
		
		.content-box
			min-height 100%

		.model-left-content .header-box.title	
			border-top 1px solid rgb(248, 250, 252)
				
	.meta-info > div:nth-child(2) > *
		word-wrap initial						