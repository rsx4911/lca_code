.progress-monitor 
	height auto
	padding 10px 0

	.progress-monitor-bar 
		height 20px
		border 1px solid rgb(200, 200, 200)
		background white
		border-radius 2px

		.progress-monitor-indicator 
			background linear-gradient(to right, rgba(0, 200, 0, 0.5), rgba(0, 100, 0, 0.75))
			width 0%
			height 100%
			text-align center
			transition width 1s ease, background 1s ease
			color rgb(255, 255, 255)
