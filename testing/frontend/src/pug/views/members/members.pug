.header-box 
	if canEdit
		.input-group.input-group-lg
			input#filter.form-control(type='text' placeholder='Filter by name')
			span.input-group-btn
				button.btn.btn-success(data-action='add-members') 
					span.glyphicon.glyphicon-plus
					span.text Add members
	else
		.form-group
			input#filter.form-control.input-lg(type='text' placeholder='Filter by name' aria-label='Filter by name')
	.clear
.content-box
	if showRepositoryMembers
		.subheader-box(data-type='repository-members') Repository members (
			span.count 0
			| )
		.subcontent-box#repository-members
	if showGroupMembers
		if showRepositoryMembers
			br
		.subheader-box(data-type='group-members') Group members (
			span.count 0
			| )
			if showRepositoryMembers && group && canEdit
				button.btn.btn-xs.btn-default.pull-right(data-route='groups/' + group + '/members') 
					span.glyphicon.glyphicon-pencil
					span.text Edit group members
				.clear
		.subcontent-box#group-members
			